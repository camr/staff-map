{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "shims/vue.d.ts",
    "shims/shims-tsx.d.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  "files": ["shims/google.d.ts", "shims/vue.d.ts", "shims/window.d.ts"],
  "exclude": ["node_modules"]
}
