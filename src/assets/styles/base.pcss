@tailwind base;
@tailwind components;
@tailwind utilities;

.rotate-0 {
  transform: rotate(0deg);
}
.rotate-90 {
  transform: rotate(90deg);
}
.rotate-180 {
  transform: rotate(180deg);
}
.-rotate-180 {
  transform: rotate(-180deg);
}
.rotate-270 {
  transform: rotate(270deg);
}

.rotate-z-0 {
  transform: rotate3d(0deg, 0deg, 0deg);
}
.rotate-z-180 {
  transform: rotate3d(1, 0, 0, 180deg);
}
